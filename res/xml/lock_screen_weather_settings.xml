<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/lock_screen_weather_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" >

    <SwitchPreference
        android:key="lock_screen_show_weather"
        android:title="@string/weather_show_weather_title"
        android:summary="@string/weather_show_weather_summary" />

    <SwitchPreference
        android:key="ambient_display_show_weather"
        android:title="@string/ambient_display_show_weather_title"
        android:summary="@string/ambient_display_show_weather_summary" />

    <SwitchPreference
        android:key="lock_screen_show_weather_location"
        android:title="@string/weather_show_location_title"
        android:summary="@string/weather_show_location_summary" />

    <SwitchPreference
        android:key="lock_screen_show_weather_condition"
        android:title="@string/weather_show_condition_title"
        android:summary="@string/weather_show_condition_summary" />
    
   <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="lock_screen_weather_temp_color"
        android:title="@string/lock_screen_weather_temp_color"
        android:defaultValue="0xffffffff" />

   <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="lock_screen_weather_con_color"
        android:title="@string/lock_screen_weather_con_color"
        android:defaultValue="0xffffffff" />

   <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="lock_screen_weather_city_color"
        android:title="@string/lock_screen_weather_city_color"
        android:defaultValue="0xffffffff" />

   <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="weather_icon_color"
        android:title="@string/icons_title"
        android:defaultValue="0xffffffff" />

    <PreferenceCategory
        android:key="weather_cat_notifications"
        android:title="@string/weather_cat_notifications_title">

        <ListPreference
            android:key="weather_hide_panel"
            android:title="@string/weather_hide_panel_title"
            android:dialogTitle="@string/weather_hide_panel_dlg_title"
            android:entries="@array/weather_hide_panel_entries"
            android:entryValues="@array/weather_hide_panel_values" />

        <ListPreference
            android:key="weather_number_of_notifications"
            android:title="@string/weather_number_of_notifications_title"
            android:dialogTitle="@string/weather_number_of_notifications_dlg_title"
            android:entries="@array/weather_number_of_notifications_entries"
            android:entryValues="@array/weather_number_of_notifications_values" />
    </PreferenceCategory>

  <PreferenceCategory
        android:key="weather_category"
        android:title="@string/sb_weather_ic_title" >

        <PreferenceScreen
            android:title="@string/weather_config_title"
            android:summary="@string/weather_config_summary" >
        <intent android:action="android.intent.action.MAIN"
                android:targetPackage="org.omnirom.omnijaws"
                android:targetClass="org.omnirom.omnijaws.SettingsActivity" />
        </PreferenceScreen>

        <ListPreference
           android:key="weather_icon_pack"
           android:title="@string/weather_icon_pack_title"
           android:persistent="false" />

      </PreferenceCategory>

</PreferenceScreen>
